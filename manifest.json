{
  "manifest_version": 3,
  "name": "YouTube Feed Cleaner",
  "version": "3.0",
  "description": "Скрывает Джемы, Shorts, просмотренные и старые видео.",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}